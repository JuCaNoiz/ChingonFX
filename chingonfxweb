    <script>
        const ctx = new (window.AudioContext || window.webkitAudioContext)();
        let isRunning = false;
        let mediaStreamSource = null;
        let nodes = {};
        let analyser = null;
        let kickInterval = null;

        // --- 30 FACTORY PRESETS ---
        const factoryPresets = [
            { name: "INIT CLEAN", fua: 0, viaje: 10, caos: 0, choro: 0, pache: 20, aplastar: 0, patrona: 100, filter: 'lp' },
