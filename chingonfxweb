            { name: "TECHNO PUMP", fua: 30, viaje: 10, caos: 0, choro: 0, pache: 10, aplastar: 110, patrona: 110, filter: 'lp' },
            { name: "ACID BATH", fua: 110, viaje: 40, caos: 127, choro: 60, pache: 30, aplastar: 20, patrona: 80, filter: 'bp' },
            { name: "SPACE VERB", fua: 10, viaje: 20, caos: 10, choro: 0, pache: 127, aplastar: 0, patrona: 90, filter: 'lp' },
            { name: "BROKEN TAPE", fua: 90, viaje: 60, caos: 80, choro: 40, pache: 20, aplastar: 0, patrona: 85, filter: 'lp' },
            { name: "SUB BASS", fua: 60, viaje: 0, caos: 20, choro: 0, pache: 0, aplastar: 50, patrona: 120, filter: 'lp' },
            { name: "INDUSTRIAL", fua: 127, viaje: 10, caos: 50, choro: 0, pache: 80, aplastar: 80, patrona: 70, filter: 'bp' },
            { name: "LOFI DREAM", fua: 50, viaje: 70, caos: 100, choro: 30, pache: 90, aplastar: 10, patrona: 90, filter: 'lp' },
            { name: "GHOST DUB", fua: 30, viaje: 110, caos: 40, choro: 100, pache: 100, aplastar: 0, patrona: 90, filter: 'bp' },
            { name: "HARD KICK", fua: 100, viaje: 0, caos: 0, choro: 0, pache: 0, aplastar: 0, patrona: 100, filter: 'lp' },
            { name: "SIDECHAINER", fua: 0, viaje: 0, caos: 0, choro: 0, pache: 0, aplastar: 127, patrona: 100, filter: 'lp' },
            { name: "RESONATOR", fua: 40, viaje: 5, caos: 120, choro: 80, pache: 20, aplastar: 0, patrona: 90, filter: 'bp' },
            { name: "UNDERWATER", fua: 20, viaje: 40, caos: 10, choro: 50, pache: 100, aplastar: 0, patrona: 90, filter: 'lp' },
            { name: "CRUSHED", fua: 120, viaje: 50, caos: 0, choro: 0, pache: 0, aplastar: 0, patrona: 80, filter: 'lp' },
            { name: "PING PONG", fua: 10, viaje: 90, caos: 30, choro: 60, pache: 30, aplastar: 0, patrona: 100, filter: 'lp' },
            { name: "DARK ROOM", fua: 60, viaje: 20, caos: 90, choro: 10, pache: 80, aplastar: 0, patrona: 100, filter: 'lp' },
            { name: "RADIO", fua: 80, viaje: 0, caos: 127, choro: 0, pache: 10, aplastar: 0, patrona: 90, filter: 'bp' },
            { name: "GLITCH", fua: 100, viaje: 10, caos: 0, choro: 120, pache: 0, aplastar: 0, patrona: 80, filter: 'lp' },
            { name: "SHIMMER", fua: 0, viaje: 80, caos: 40, choro: 70, pache: 120, aplastar: 0, patrona: 90, filter: 'lp' },
            { name: "BASS GLUE", fua: 30, viaje: 0, caos: 0, choro: 0, pache: 10, aplastar: 60, patrona: 110, filter: 'lp' },
            { name: "LEAD SOAR", fua: 70, viaje: 60, caos: 30, choro: 30, pache: 70, aplastar: 0, patrona: 100, filter: 'bp' },
            { name: "PAD WASH", fua: 20, viaje: 100, caos: 50, choro: 60, pache: 127, aplastar: 30, patrona: 90, filter: 'lp' },
            { name: "NOIZE", fua: 127, viaje: 127, caos: 127, choro: 127, pache: 127, aplastar: 0, patrona: 60, filter: 'bp' },
            { name: "SUBTLE", fua: 15, viaje: 15, caos: 10, choro: 0, pache: 15, aplastar: 0, patrona: 100, filter: 'lp' },
            { name: "DRY DRIVE", fua: 100, viaje: 0, caos: 50, choro: 0, pache: 0, aplastar: 0, patrona: 95, filter: 'lp' },
            { name: "WET ONLY", fua: 50, viaje: 80, caos: 20, choro: 0, pache: 80, aplastar: 0, patrona: 0, filter: 'lp' },
            { name: "FINALIZER", fua: 20, viaje: 0, caos: 0, choro: 0, pache: 10, aplastar: 20, patrona: 100, filter: 'lp' }
        ];

        // --- PRESET LOGIC ---
        let currentPreset = 0;
        let presets = JSON.parse(localStorage.getItem('chingon_presets'));

        // Load Factory if Empty
        if (!presets || presets.length < 30 || presets.every(p => p === null)) {
            presets = JSON.parse(JSON.stringify(factoryPresets)); // Deep copy
            localStorage.setItem('chingon_presets', JSON.stringify(presets));
            console.log("Factory Presets Loaded");
        }
        
        function updateDisplay() {
            const p = presets[currentPreset];
            const num = (currentPreset+1).toString().padStart(2,'0');
            document.getElementById('bank-label').innerText = `${num}: ${p ? p.name.substring(0,10) : "EMPTY"}`;
            document.getElementById('preset-display').innerText = p ? p.name : "---";
        }

        document.getElementById('btn-prev').onclick = () => { currentPreset = (currentPreset-1+30)%30; updateDisplay(); };
        document.getElementById('btn-next').onclick = () => { currentPreset = (currentPreset+1)%30; updateDisplay(); };
        
        document.getElementById('btn-save').onclick = () => {
            const name = prompt("NAME PRESET:", presets[currentPreset].name);
            if(name){
                const data = {
                    name,
                    fua: document.getElementById('param-fua').value,
                    viaje: document.getElementById('param-viaje').value,
                    caos: document.getElementById('param-caos').value,
                    choro: document.getElementById('param-choro').value,
                    pacheco: document.getElementById('param-pache').value,
                    aplastar: document.getElementById('param-aplastar').value,
                    patrona: document.getElementById('param-patrona').value,
                    filter: document.getElementById('sw-filter').classList.contains('sw-left') ? 'lp' : 'bp'
                };
                presets[currentPreset] = data;
                localStorage.setItem('chingon_presets', JSON.stringify(presets));
                updateDisplay();
            }
        };

        document.getElementById('btn-load').onclick = () => {
            const p = presets[currentPreset];
            if(!p) return alert("Empty Slot");
            ['fua','viaje','caos','choro','pacheco','aplastar','patrona'].forEach(k => {
                const el = document.getElementById('param-'+k);
                if(el) {
                    el.value = p[k];
                    el.dispatchEvent(new Event('input'));
                }
            });
            const sw = document.getElementById('sw-filter');
            if(p.filter === 'lp') { sw.className = 'toggle-bat sw-left'; } else { sw.className = 'toggle-bat sw-right'; }
            if(isRunning) updateAudioParams();
        };

        // --- VISUALS ---
        function updateKnob(id, val) {
            const deg = (val / 127) * 280 - 140; 
            const vis = document.getElementById(id.replace('param-', 'vis-'));
            if(vis) vis.style.transform = `rotate(${deg}deg)`;
        }

        const params = ['fua','viaje','caos','choro','pache','aplastar','patrona'];
        params.forEach(p => {
            const el = document.getElementById('param-'+p);
            el.addEventListener('input', (e) => {
                updateKnob(el.id, e.target.value);
                if(isRunning) updateAudioParams();
            });
            updateKnob(el.id, el.value);
        });

        document.getElementById('sw-filter').onclick = (e) => {
            const el = e.target;
            if(el.classList.contains('sw-left')) {
                el.classList.replace('sw-left', 'sw-right'); 
            } else {
                el.classList.replace('sw-right', 'sw-left'); 
            }
            if(isRunning) updateAudioParams();
        };

        // --- AUDIO ENGINE ---
        function makeDistortionCurve(k) {
            const n = 44100, curve = new Float32Array(n);
            for (let i=0; i<n; ++i) { let x = i*2/n - 1; curve[i] = Math.tanh(x*k); }
            return curve;
        }

        function initAudio() {
            analyser = ctx.createAnalyser();
            analyser.fftSize = 2048;

            nodes.inL = ctx.createGain(); nodes.inR = ctx.createGain();
            nodes.kickIn = ctx.createGain(); 

            nodes.merger = ctx.createChannelMerger(2);
            nodes.inL.connect(nodes.merger, 0, 0); nodes.inR.connect(nodes.merger, 0, 1);

            nodes.preGain = ctx.createGain();
            nodes.drive = ctx.createWaveShaper(); nodes.drive.curve = makeDistortionCurve(1.5); 
            nodes.drive.oversample = '4x';
            nodes.merger.connect(nodes.preGain); nodes.preGain.connect(nodes.drive);

            nodes.ducking = ctx.createGain();
            nodes.drive.connect(nodes.ducking);

            nodes.split = ctx.createGain(); 
            nodes.ducking.connect(nodes.split);
            
            nodes.delayL = ctx.createDelay(2.0); nodes.delayR = ctx.createDelay(2.0);
            nodes.fbIn = ctx.createGain(); 
            nodes.fbFilter = ctx.createBiquadFilter(); 
            nodes.fbDist = ctx.createWaveShaper(); nodes.fbDist.curve = makeDistortionCurve(1.0);

            nodes.split.connect(nodes.delayL); nodes.split.connect(nodes.delayR);
            
            nodes.delayL.connect(nodes.fbIn); nodes.delayR.connect(nodes.fbIn);
            nodes.fbIn.connect(nodes.fbDist); nodes.fbDist.connect(nodes.fbFilter);
            nodes.fbFilter.connect(nodes.delayL); nodes.fbFilter.connect(nodes.delayR);

            nodes.verbSend = ctx.createGain();
            nodes.verb = ctx.createConvolver();
            
            const len = ctx.sampleRate * 2; const buf = ctx.createBuffer(2, len, ctx.sampleRate);
            for(let i=0;i<len;i++) { 
                let d = Math.pow(1-i/len,3);
                buf.getChannelData(0)[i] = (Math.random()*2-1)*d; 
                buf.getChannelData(1)[i] = (Math.random()*2-1)*d; 
            }
            nodes.verb.buffer = buf;
            nodes.delayL.connect(nodes.verbSend); nodes.delayR.connect(nodes.verbSend);
            nodes.verbSend.connect(nodes.verb);

            nodes.master = ctx.createGain();
            nodes.ducking.connect(nodes.master); 
            nodes.delayL.connect(nodes.master); nodes.delayR.connect(nodes.master); 
            nodes.verb.connect(nodes.master); 
            nodes.kickIn.connect(nodes.master);

            nodes.master.connect(analyser);
            nodes.master.connect(ctx.destination);

            nodes.scRect = ctx.createWaveShaper();
            const nSc = 1024; const scCurve = new Float32Array(nSc);
            for(let i=0;i<nSc;i++) scCurve[i] = Math.abs(i*2/nSc - 1);
            nodes.scRect.curve = scCurve;

            nodes.scSmooth = ctx.createBiquadFilter(); 
            nodes.scSmooth.type = 'lowpass'; nodes.scSmooth.frequency.value = 10;

            nodes.scGain = ctx.createGain(); 
            nodes.scConst = ctx.createConstantSource(); nodes.scConst.offset.value = 1; nodes.scConst.start();

            nodes.kickIn.connect(nodes.scRect);
            nodes.scRect.connect(nodes.scSmooth);
            nodes.scSmooth.connect(nodes.scGain);
            
            nodes.scGain.connect(nodes.ducking.gain);
            nodes.scConst.connect(nodes.ducking.gain);
            
            updateAudioParams();
            drawScope();
            
            // Auto-load current preset
            document.getElementById('btn-load').click();
        }

        function updateAudioParams() {
            if(!nodes.preGain) return;
            const t = ctx.currentTime;
            
            const valFua = parseInt(document.getElementById('param-fua').value)/127;
            const drive = Math.pow(valFua, 2.3) * 10 + 1;
            nodes.preGain.gain.setTargetAtTime(drive, t, 0.1);

            const valViaje = parseInt(document.getElementById('param-viaje').value)/127;
            const time = 0.03 + (valViaje * 1.2); 
            const mix = Math.pow(valViaje, 1.7);
            
            nodes.delayL.delayTime.setTargetAtTime(time, t, 0.1);
            nodes.delayR.delayTime.setTargetAtTime(time + 0.01, t, 0.1); 
            nodes.split.gain.setTargetAtTime(mix, t, 0.1);

            const valCaos = parseInt(document.getElementById('param-caos').value)/127;
            const freq = 80 + Math.pow(valCaos, 2) * 9000;
            if(nodes.fbFilter) nodes.fbFilter.frequency.setTargetAtTime(freq, t, 0.1);

            const valChoro = parseInt(document.getElementById('param-choro').value)/127;
            nodes.fbIn.gain.setTargetAtTime(valChoro * 1.1, t, 0.1);

            const valPache = parseInt(document.getElementById('param-pache').value)/127;
            nodes.verbSend.gain.setTargetAtTime(valPache, t, 0.1);

            const valApla = parseInt(document.getElementById('param-aplastar').value)/127;
            nodes.scGain.gain.setTargetAtTime(-valApla * 2, t, 0.1);

            const valPat = parseInt(document.getElementById('param-patrona').value)/127;
            nodes.master.gain.setTargetAtTime(valPat, t, 0.1);

            const isLeft = document.getElementById('sw-filter').classList.contains('sw-left');
            if(nodes.fbFilter) nodes.fbFilter.type = isLeft ? 'lowpass' : 'bandpass';
        }

        function triggerInternalKick() {
            if(!isRunning || !nodes.kickIn) return;
            const t = ctx.currentTime;
            const osc = ctx.createOscillator();
            const g = ctx.createGain();
            osc.frequency.setValueAtTime(150, t);
            osc.frequency.exponentialRampToValueAtTime(40, t+0.1);
            g.gain.setValueAtTime(1, t);
            g.gain.exponentialRampToValueAtTime(0.01, t+0.4);
            osc.connect(g);
            g.connect(nodes.kickIn);
            osc.start(t);
            osc.stop(t+0.5);
        }

        document.getElementById('btn-test-kick').onclick = (e) => {
            const btn = e.target;
            if(kickInterval) {
                clearInterval(kickInterval);
                kickInterval = null;
                btn.innerText = "FORCE KICK (4/4) [OFF]";
                btn.classList.remove('text-white', 'border-white');
            } else {
                triggerInternalKick();
                kickInterval = setInterval(triggerInternalKick, 500); 
                btn.innerText = "FORCE KICK (4/4) [ON]";
                btn.classList.add('text-white', 'border-white');
            }
        };

        function drawScope() {
            const cvs = document.getElementById('scope');
            const c = cvs.getContext('2d');
            const w = cvs.width; const h = cvs.height;
            const data = new Uint8Array(analyser.frequencyBinCount);
            analyser.getByteTimeDomainData(data);
            
            c.fillStyle = 'rgba(0,0,0,0.2)'; 
            c.fillRect(0,0,w,h);
            c.lineWidth = 2; c.strokeStyle = '#33ff33'; c.beginPath();
            
            const slice = w * 1.0 / data.length;
            let x = 0;
            for(let i=0; i<data.length; i++) {
                const v = data[i]/128.0;
                const y = v * h/2;
                if(i===0) c.moveTo(x,y); else c.lineTo(x,y);
                x+=slice;
            }
            c.stroke();
            requestAnimationFrame(drawScope);
        }

        async function getDevices() {
            const sel = document.getElementById('audio-input-select');
            const devs = await navigator.mediaDevices.enumerateDevices();
            sel.innerHTML = '<option>SELECT INPUT...</option>';
            devs.filter(d=>d.kind==='audioinput').forEach(d=>{
                const o = document.createElement('option');
                o.value = d.deviceId; o.text = d.label || "Device";
                sel.appendChild(o);
            });
        }

        document.getElementById('btn-config').onclick = () => { document.getElementById('config-panel').classList.add('config-visible'); getDevices(); };
        document.getElementById('btn-close-config').onclick = () => document.getElementById('config-panel').classList.remove('config-visible');
        
        document.getElementById('btn-power').onclick = async () => {
            await ctx.resume();
            initAudio();
            isRunning = true;
            document.getElementById('config-panel').classList.remove('config-visible');
            updateDisplay();
            
            const id = document.getElementById('audio-input-select').value;
            if(id && id !== 'SELECT INPUT...') {
                if(mediaStreamSource) mediaStreamSource.disconnect();
                const s = await navigator.mediaDevices.getUserMedia({audio:{deviceId:{exact:id}, channelCount:4, echoCancellation:false}});
                mediaStreamSource = ctx.createMediaStreamSource(s);
                const spl = ctx.createChannelSplitter(4);
                mediaStreamSource.connect(spl);
                spl.connect(nodes.inL, 0); spl.connect(nodes.inR, 1);
                try { spl.connect(nodes.kickIn, 2); } catch(e){}
            }
        };

    </script>
</body>
</html>
